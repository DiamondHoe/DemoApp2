@model Demo2.Models.Person

@{
    ViewData["Title"] = "DeletePerson";
}

<h1>Usuń osobę</h1>

<h3>Czy na pewno chcesz usunąć tę osobę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>Imię</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            <a>Nazwisko</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
    <form asp-action="DeletePerson" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary submit-btn">Powrót</a>
    </form>
</div>
