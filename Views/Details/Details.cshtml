@model Demo2.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły Osoby</h1>

<div>
    <h4>Osoba</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary submit-btn">Powrót</a>
</div>
